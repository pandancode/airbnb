<div class="container-sell-form">
    <div class="container-form">
        <h3 class="title-form">Sell a Pok√©mon</h3>
        <%= simple_form_for [@user, @pokemon] do |f| %>
          <%= f.input :pokemon_name, collection: PokemonList.all, input_html: { class: "select2", style: "width: 100%"}, label_html: { class: "row justify-content-center"} %>
          <%= f.input :level, label_html: { class: "row justify-content-center"} %>
          <%= f.input :description, label_html: { class: "row justify-content-center"} %>
          <%= f.input :address, label_html: { class: "row justify-content-center"} %>
          <%= f.input :price, label_html: { class: "row justify-content-center"} %>
          <%= f.button :submit, 'Sell me now !', class: 'btn-submit' %>
        <% end %>
          <%= link_to pokemons_path do %>
            <ion-icon class="ionicon-icon" name="arrow-undo-outline"></ion-icon>
          <% end %>
    </div>
    <div class="container-form-img">

    </div>
</div>
