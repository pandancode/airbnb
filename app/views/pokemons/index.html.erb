<div class="container">
  <h2>Here are all the Pokémons you can buy</h2>

  <div class="container-cards">
    <%@pokemons.each do |pokemon| %>
      <%= link_to pokemon_path(pokemon), class: "link_to_pkmn_show"  do %>
      <div class="card-container">
        <div class="card-pokemon">
        <% pkmn_num = PokeApi.get(pokemon: pokemon.pokemon_name.to_i).name %>
          <img src="<%= PokeApi.get(pokemon: pkmn_num).sprites.front_default %>" alt="">
          <%# <img src="<%= PokeApi.get(pokemon: pokemon.pokemon_name.downcase).sprites.front_default %>
        </div>
        <div class="card-description">
          <h4><%= pkmn_num.upcase %></h4>
          <p class="index-cards-descriptions"><%= pokemon.description %></p>
          <p>£<%= pokemon.price %></p>
          <p> </p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

</div>
